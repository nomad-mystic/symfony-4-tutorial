{% extends 'base.html.twig' %}

{% block title %}Blog!{% endblock %}
{% block body %}
    <h1>Welcome to the Blog!</h1>
    {% for id, post in posts %}
        <p><a href="{{ path('blog_show', {'id': id}) }}">ID {{ id }}</a></p>
        <h3>{{ post.title }}</h3>
        <p>{{ post.text }}</p>
    {% endfor %}
{% endblock %}